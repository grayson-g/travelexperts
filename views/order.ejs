<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">

    <style>
      .package-image {
          height: 100%;
          width: 100%;
          object-fit:cover;
      }
    </style>

    <title><%= package.name %></title>
  </head>
  <body>
    <main>
      <div class="container mx-auto py-3">
        <div class="p-3 mx-auto mb-3 text-center">
          <h1 class="display-3 fw-normal"><%= package.name %></h1>
        </div>
        <div class="row row-cols-2 mb-3">
          <div class="col" style="width: 45%;">
            <img class="package-image"
                 src="/media/package-<%= package.id %>.jpg"/>
          </div>
          <div class="col ms-md-3">
            <h2 class="text-muted">Booking Details</h2>
            <form>
              <div id="booking-details" class="container pt-1 pb-2 ps-1">
                <div class="row" id="group-size-row">
                  <div class="col">
                    <label for="group-size" class="form-label">Group Size:</label>
                    <input  type="number"
                            id="group-size"
                            class="form-control"
                            value="1" min="1" max="10"
                            name="orderSize" 
                            required>
                  </div>
                  <div class="col">
                    <label for="trip-type" class="form-label">Trip Type:</label>
                   <select id="trip-type" name="orderType" class="form-select" required onchange="update_group_size();">
                      <% for (let i = 0; i < trip_types.length; i++) { %>
                        <option value="<%- trip_types[i].id %>">
                          <%- trip_types[i].name %>
                       </option>
                     <% } %>
                    </select>
                  </div>
                </div>
              </div>
              <h2 class="text-muted pt-3">Client Details</h2>
              <div class="container pt-1 pb-2 ps-1">
                <div class="row">
                  <div class="col">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" class="form-control" placeholder="name@example.com" pattern="^([a-zA-Z0-9_\-\.]+)@([a-zA-Z0-9_\-\.]+)\.([a-zA-Z]{2,5})$" name="CustEmail" required>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <label for="password" class="form-label">Password: </label>
                    <input type="password" class="form-control" placeholder="Password" name="password" id="password-input"/>
                    <div class="valid-feedback">Good</div>
                    <div class="invalid-feedback">Wrong</div>
                  </div>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="payment-check" name="orderUseSavedPayment"
                         value="checked"/>
                  <label class="form-check-label" for="payment-check">Use saved payment</label>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
    <script>
      function update_group_size()
      {
          let type = document.getElementById("trip-type").value;
          let size_select = document.getElementById("group-size-row");

          if (type === "G")
          {
              size_select.classList.remove("d-none");
          }
          else
          {
              size_select.classList.add("d-none");
          }
      }
    </script>
  </body>
</html>