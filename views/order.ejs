<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">

    <style>
      .package-image {
          height: 100%;
          width: 100%;
          object-fit:cover;
      }
    </style>

    <title><%= package.name %></title>
  </head>
  <body onload="update_people();">
    <main>
      <div class="container mx-auto py-3">
        <div class="p-3 mx-auto mb-3 text-center">
          <h1 class="display-3 fw-normal"><%= package.name %></h1>
        </div>
        <div class="row row-cols-2 mb-3">
          <div class="col" style="width: 45%;">
            <img class="package-image"
                 src="/media/package-<%= package.id %>.jpg"/>
          </div>
          <div class="col ms-md-3">
            <h2 class="text-muted">Booking Details</h2>
            <form>
              <div id="booking-details" class="container pt-1 pb-2 ps-1">
                <div class="row">
                  <div class="col">
                    <label for="group-size" class="form-label">Group Size:</label>
                    <input  type="number"
                            id="group-size"
                            class="form-control"
                            placeholder="1" min="1" max="10"
                            name="bookingSize" 
                            required
                            onchange="update_people();">
                  </div>
                </div>

              <template id="booking-member">
                <div class="row group-person">
                  <div class="col">
                    <label for="fname" class="form-label">First Name:</label>
                    <input type="text" id="fname" class="form-control" placeholder="First name" name="CustFirstName" required>
                  </div>
                  <div class="col">
                    <label for="lname" class="form-label">Last Name:</label>
                    <input type="text" id="lname" class="form-control" placeholder="Last Name" name="CustLastName" required>
                  </div>
                </div>
              </template>

              </div>
            </form>
            <h2 class="text-muted pt-3">Billing Details</h2>
            <form>
              <div class="container pt-1 pb-2 ps-1">
                <div class="row">
                  <div class="col">
                    <label for="fname" class="form-label">First Name:</label>
                    <input type="text" id="fname" class="form-control" placeholder="First name" name="CustFirstName" required>
                  </div>
                  <div class="col">
                    <label for="lname" class="form-label">Last Name:</label>
                    <input type="text" id="lname" class="form-control" placeholder="Last Name" name="CustLastName" required>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <label for="address" class="form-label">Address:</label>
                    <input type="text" id="address" class="form-control" placeholder="Address" name="CustAddress" required>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <label for="city" class="form-label">City:</label>
                    <input type="text" id="city" class="form-control" placeholder="City" name="CustCity" required>
                  </div>
                  <div class="col">
                    <label for="province" class="form-label">Province:</label>
                    <input pattern="^[A-Za-z]{2}$" type="text" id="province" class="form-control" placeholder="Province" name="CustProv" required>
                  </div>
                  <div class="col">
                    <label for="postalCode" class="form-label">Postal Code:</label>
                    <input type="text" id="postalCode" class="form-control" placeholder="Postal Code" pattern="^((\d{5}-\d{4})|(\d{5})|([A-Z|a-z]\d[A-Z|a-z]\d[A-Z|a-z]\d))$" name="CustPostal">
                  </div>
                  <div class="col">
                    <label for="country" class="form-label">Country:</label>
                    <input type="text" id="country" class="form-control" placeholder="Country" name="CustCountry" required>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" class="form-control" placeholder="name@example.com" pattern="^([a-zA-Z0-9_\-\.]+)@([a-zA-Z0-9_\-\.]+)\.([a-zA-Z]{2,5})$" name="CustEmail">
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <label for="homenum" class="form-label">Home Phone number:</label>
                    <input type="text" id="homenum" class="form-control" placeholder="" name="CustHomePhone" required>
                  </div>
                  <div class="col">
                    <label for="busnum" class="form-label">Business Phone number:</label>
                    <input type="text" id="busnum" class="form-control" placeholder="" name="CustBusPhone" required>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
    <script>
      function update_people()
      {
          let groupSize = parseInt(document.getElementById("group-size").value);
          let groupInputs = document.getElementsByClassName("group-person");

          while (groupSize > groupInputs.length)
          {
            insertGroupMemberElement();
          }

          while (groupSize < groupInputs.length)
          {
            groupInputs[groupInputs.length - 1].remove();
          }
      }

      function insertGroupMemberElement()
      {
          let parent = document.getElementById("booking-details");
          let template = document.getElementById("booking-member");
          let element = template.content.firstElementChild.cloneNode(true);

          parent.appendChild(element);
      }
    </script>
  </body>
</html>
